<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=ISO-8859-1">
<title>AngularJs Demo</title>
<script src="js/angular.min.js"></script>
<script>
	angular.module('invoice2', [ 'finance2' ]).controller(
			'InvoiceController',
			[
					'currencyConverter',
					function InvoiceController(currencyConverter) {
						this.qty = 1;
						this.cost = 2;
						this.inCurr = 'EUR';
						this.currencies = currencyConverter.currencies;

						this.total = function total(outCurr) {
							return currencyConverter.convert(this.qty
									* this.cost, this.inCurr, outCurr);
						};
						this.pay = function pay() {
							window.alert('Thanks!');
						};
					} ]);

	angular.module('finance2', []).factory(
			'currencyConverter',
			function() {
				var currencies = [ 'USD', 'EUR', 'CNY' ];
				var usdToForeignRates = {
					USD : 1,
					EUR : 0.74,
					CNY : 6.09
				};
				var convert = function(amount, inCurr, outCurr) {
					return amount * usdToForeignRates[outCurr]
							/ usdToForeignRates[inCurr];
				};

				return {
					currencies : currencies,
					convert : convert
				};
			});
</script>


</head>
<body ng-app="invoice2">
	<div ng-controller="InvoiceController as invoice">
		<b>Invoice:</b>
		<div>
			Quantity: <input type="number" min="0" ng-model="invoice.qty"
				required>
		</div>
		<div>
			Costs: <input type="number" min="0" ng-model="invoice.cost" required>
			<select ng-model="invoice.inCurr">
				<option ng-repeat="c in invoice.currencies">{{c}}</option>
			</select>
		</div>
		<div>
			<b>Total:</b> <span ng-repeat="c in invoice.currencies">
				{{invoice.total(c) | currency:c}} </span><br>
			<button class="btn" ng-click="invoice.pay()">Pay</button>
		</div>
	</div>
</body>
</html>